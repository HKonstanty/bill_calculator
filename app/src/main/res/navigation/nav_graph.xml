<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.odhiambodevelopers.rxkotlin.UI.UserListFragment"
        android:label="User list"
        tools:layout="@layout/fragment_user_list" >
        <action
            android:id="@+id/action_userListFragment_to_userDetailsFragment2"
            app:destination="@id/userDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/billListFragment"
        android:name="com.odhiambodevelopers.rxkotlin.UI.BillListFragment"
        android:label="Bill list"
        tools:layout="@layout/fragment_bill_list" />
    <fragment
        android:id="@+id/settlementListFragment"
        android:name="com.odhiambodevelopers.rxkotlin.UI.SettlementListFragment"
        android:label="Settlement list"
        tools:layout="@layout/fragment_settlement_list" />
    <dialog
        android:id="@+id/modalBottomSheetFragment"
        android:name="com.odhiambodevelopers.rxkotlin.UI.ModalBottomSheetFragment"
        android:label="Bottom sheet"
        tools:layout="@layout/fragment_modal_bottom_sheet" />
    <activity
        android:id="@+id/addUserActivity"
        android:name="com.odhiambodevelopers.rxkotlin.AddUserActivity"
        android:label="activity_add_user"
        tools:layout="@layout/activity_add_user" />
    <fragment
        android:id="@+id/userDetailsFragment2"
        android:name="com.odhiambodevelopers.rxkotlin.UI.UserDetailsFragment"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" />
</navigation>