    <!--&lt;!&ndash;        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>&ndash;&gt;-->
    <!--&lt;!&ndash;        <item name="itemIconTint">@color/white</item>&ndash;&gt;-->
    <!--&lt;!&ndash;        <item name="itemTextColor">@color/white</item>&ndash;&gt;-->
    <!--    </style>-->

    <style name="BottomNavigation">
        <item name="android:background">@color/primary</item>
        <!--        <item name="backgroundTint">@color/secondary</item>-->
        <!--        <item name="itemBackground">@drawable/nav_item_color_state</item>-->
        <item name="elevation">5dp</item>
        <item name="itemTextAppearanceInactive">@color/black</item>
        <item name="itemTextAppearanceActive">@color/primary_dark</item>
        <item name="itemRippleColor">@color/secondary</item>
        <!--        <item name="itemIconTint">@color/gray</item>-->
        <!--        <item name="itemTextColor">@color/white</item>-->
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
        <!--        <item name="itemPaddingTop">@dimen/m3_bottom_nav_item_padding_top</item>-->
        <!--        <item name="itemPaddingBottom">@dimen/m3_bottom_nav_item_padding_bottom</item>-->
        <!--        <item name="android:minHeight">@dimen/m3_bottom_nav_min_height</item>-->
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Theme.RxKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RxKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RxKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>